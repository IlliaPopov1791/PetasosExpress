<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/logo"
    tools:context=".ProductScreen">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/product_placeholder"
        android:scaleType="centerCrop"
        android:contentDescription="@string/product_image"
        android:layout_marginBottom="16dp"/>

    <!-- Product Name -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/product_name"
        android:textSize="26sp"
        android:textColor="@color/ceramic"
        android:textStyle="bold"
        android:layout_below="@id/product_image"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/product_producer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/producer"
        android:textSize="26sp"
        android:textColor="@color/wine"
        android:textStyle="bold"
        android:layout_below="@id/product_name"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"/>

    <!-- Product Price -->
    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        android:textColor="@color/wine"
        android:textSize="24sp"
        android:layout_below="@id/product_producer"
        android:layout_marginBottom="24dp"/>

    <!-- Quantity Selector -->
    <RelativeLayout
        android:id="@+id/quantity_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wine"
            android:text="@string/quantity"
            android:textSize="24sp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/decrease_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/wine"
            android:textSize="28sp"
            android:layout_toEndOf="@id/quantity_text"
            android:layout_marginStart="@dimen/spacing_huge"
            android:background="@drawable/button_background"
            android:text="@string/minus_long" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/wine"
            android:text="@string/number"
            android:textSize="24sp"
            android:layout_toEndOf="@id/decrease_button"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/increase_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/wine"
            android:textSize="28sp"
            android:background="@drawable/button_background"
            android:layout_toEndOf="@id/quantity"
            android:layout_marginStart="@dimen/spacing_medium"
            android:text="@string/plus" />

    </RelativeLayout>

    <Button
        android:id="@+id/cart_button"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_below="@id/quantity_selector"
        android:layout_marginTop="38dp"
        android:background="@drawable/button_background"
        android:text="@string/add_to_your_cart" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/logo_saturated"
        android:src="@drawable/ic_cart_foreground" />

</RelativeLayout>
