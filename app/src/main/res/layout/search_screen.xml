<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portrait2"
    android:padding="5dp"
    android:id="@+id/SearchScreen"
    tools:context=".SearchScreen">

    <!-- Search Bar -->

    <!-- ListView for search results -->

    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="397dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/search_bar_background"
        android:hint="@string/search_hint"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="12dp"
        android:textColor="@color/ceramic"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/search_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchEditText"
        android:layout_marginTop="11dp"
        android:background="@drawable/search_bar_background"
        android:textColor="@color/ceramic"
        android:divider="@color/wine"
        android:dividerHeight="2dp"
        android:padding="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_cart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/logo_saturated"
        android:src="@drawable/ic_cart_foreground" />

</RelativeLayout>
