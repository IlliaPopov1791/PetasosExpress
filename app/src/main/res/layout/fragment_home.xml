<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_theme"
    android:id="@+id/main_home"
    tools:context=".Home">

    <!-- Button Layout with Margin -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/button_group_border"
        android:padding="16dp">

        <!-- First Row of Buttons with Padding -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Food Button with Padding -->
            <ImageButton
                android:id="@+id/foodButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_food_button_foreground"
                android:background="@drawable/button_background"
                android:padding="16dp" />

            <!-- Electronics Button with Padding -->
            <ImageButton
                android:id="@+id/electronicsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_electronics_button_foreground"
                android:background="@drawable/button_background"
                android:padding="16dp" />

        </LinearLayout>

        <!-- Second Row of Buttons with Padding -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <!-- Medical Button with Padding -->
            <ImageButton
                android:id="@+id/medicalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_medical_button_foreground"
                android:background="@drawable/button_background"
                android:padding="16dp" />

            <!-- Other Button with Padding -->
            <ImageButton
                android:id="@+id/otherButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_other_button"
                android:background="@drawable/button_background"
                android:padding="16dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:background="@drawable/search_bar_background"
        android:hint="@string/search_hint"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</RelativeLayout>
