<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/logo"
    tools:context=".PaymentScreen">

    <!-- Payment Amount Title -->
    <TextView
        android:id="@+id/paymentAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/wine"
        android:textStyle="bold"
        android:text="@string/payment_amount"
        android:textSize="26sp"
        android:layout_marginBottom="24dp"/>

    <!-- Payment Amount Value -->
    <TextView
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/wine"
        android:textStyle="bold"
        android:text="@string/$amount"
        android:textSize="34sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_background"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Card number -->
            <EditText
                android:id="@+id/credit_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/card_number"
                android:textColor="@color/logo"
                android:textColorHint="@color/logo"
                android:inputType="numberDecimal"
                android:maxLength="16"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

            <!-- Expiry date and security code -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <!-- Expiry date MM/YY -->
                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <EditText
                    android:id="@+id/security_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/cvv"
                    android:inputType="numberDecimal"
                    android:maxLength="3"
                    android:textSize="18sp"
                    android:textColor="@color/logo"
                    android:textColorHint="@color/logo"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card Holder Name and Zip Code -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <!-- Card Holder Name -->
        <TextView
            android:id="@+id/cardHolderNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/wine"
            android:text="@string/card_holder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/card_holder_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="18sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp">

        <!-- Zip Code Label and Input -->
        <TextView
            android:id="@+id/zipCodeLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/wine"
            android:text="Zip Code:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/zip_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:textSize="18sp"
            android:layout_weight="2"/>
    </LinearLayout>

    <!-- Payment Button -->
    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/ceramic"
        android:text="@string/pay"
        android:background="@drawable/button_background"
        android:layout_marginTop="28dp"/>
</LinearLayout>
